


<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>

            <ul>
                <% @song.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label 'Song Title: ' %>
    <%= f.text_field :title %>

    <%= f.label 'Released? ' %>
    <%= f.text_field :released %>

    <%= f.label 'Release Year: ' %>
    <%= f.text_field :release_year %>

    <%= f.label 'Artist Name: ' %>
    <%= f.text_field :artist_name %>

    <%= f.label 'Genre: ' %>
    <%= f.text_field :genre %>

    <%= f.submit 'Submit Song' %>
<% end %>